<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ChatController" spacing="10" padding="10">

    <TextArea fx:id="chatArea" editable="false" prefHeight="400" wrapText="true" />

    <HBox spacing="10">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Escribe tu mensaje..." />
        <Button fx:id="sendButton" text="Enviar" />
    </HBox>

</VBox>
